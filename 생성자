import 'package:flutter/material.dart';

//생성자
//클래스 키워드 입력
class Idol {
  //클래스에 종속되는 변수 지정
  final String name; //생성자에서 입력받는 변수들은 일반적으로 fianl 키워드 사용.

  Idol(String name) : this.name = name; //생성자: "템플릿 고정"이라고 이해 ㅇㅇ

  void sayName() {
    print('저는 ${this.name}입니다');
  }
}

void main() {
  Idol blackPink = Idol('블랙핑크');
  blackPink.sayName();

  Idol bts = Idol('bts');
  bts.sayName();
}
